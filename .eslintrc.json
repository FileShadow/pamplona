{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1,
				"MemberExpression": 0,
				"CallExpression": { "arguments": 1 }
			}
		],
		"brace-style": [
			"error",
			"1tbs",
			{ "allowSingleLine": true }
		],
		"curly": [
			"warn",
			"all"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"warn",
			"single",
			{ "avoidEscape": true }
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": 0,
		"no-unused-vars": "warn"
	}
}
